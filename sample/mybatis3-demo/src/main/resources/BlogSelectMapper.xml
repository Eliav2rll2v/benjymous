<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.baomidou.mybatis3.mapper.BlogSelectMapper">

    <resultMap id="BaseResultMap"
               type="com.baomidou.mybatis3.domain.Blog">
        <id column="id" property="id"/>
        <result column="age" property="age"/>
        <result column="content" property="content"/>
        <result column="title" property="title"/>
        <result column="money" property="money"/>
    </resultMap>
    <sql id="Base_Column_List">
		id,age,content,title,money
	</sql>

    <select id="selectByIdAndAgeAfter" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_blog
        where id = #{id,jdbcType=NUMERIC}
        AND age > #{age,jdbcType=NUMERIC}


    </select>
    <select id="selectByIdNotIn" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_blog
        where id not in
        <foreach collection="idList" item="item" open="(" close=")" separator=",">
            #{item,jdbcType=NUMERIC}
        </foreach>


    </select>
    <select id="selectByIdBetween" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_blog
        where id between #{beginId,jdbcType=NUMERIC} and #{endId,jdbcType=NUMERIC}


    </select>
    <select resultMap="BaseResultMap" id="selectByIdLike">
        select
        <include refid="Base_Column_List"/>
        from t_blog
        where id like #{id,jdbcType=NUMERIC}


    </select>
    <select resultMap="BaseResultMap" id="selectByIdNotLike">
        select
        <include refid="Base_Column_List"/>
        from t_blog
        where id not like #{id,jdbcType=NUMERIC}


    </select>
    <select resultMap="BaseResultMap" id="selectByIdStartWith">
        select
        <include refid="Base_Column_List"/>
        from t_blog
        where id like CONCAT('%', #{id,jdbcType=NUMERIC})


    </select>
    <select id="selectByIdEndWith" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_blog
        where id like CONCAT( #{id,jdbcType=NUMERIC},'%')

    </select>
    <select id="selectByIdContaining" resultMap="BaseResultMap">select
        <include refid="Base_Column_List"/>
        from t_blog
        where id like CONCAT('%', #{id,jdbcType=NUMERIC},'%')

    </select>
    <select id="selectByIdTrue" resultMap="BaseResultMap">select
        <include refid="Base_Column_List"/>
        from t_blog
        where id = true

    </select>
    <select id="selectByIdFalse" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_blog
        where id = false

    </select>
    <select id="selectByIdIgnoreCase" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_blog
        where UPPER(id) = UPPER(#{id,jdbcType=NUMERIC})

    </select>
    <select id="selectByIdGreaterThan" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_blog
        where id > #{id,jdbcType=NUMERIC}

    </select>
    <select id="selectByIdGreaterThanEqual" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_blog
        where id >= #{id,jdbcType=NUMERIC}

    </select>
    <select id="selectByIdIs" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_blog
        where id = #{id,jdbcType=NUMERIC}

    </select>
    <select id="selectByIdIn" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_blog
        where id in
        <foreach collection="idList" item="item" open="(" close=")" separator=",">
            #{item,jdbcType=NUMERIC}
        </foreach>

    </select>
</mapper>
