<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.baomidou.mybatis3.mapper.ExampleMapper">
    <resultMap id="BaseResultMap"
               type="com.baomidou.mybatis3.domain.Blog">
        <id column="id" property="id"/>
        <result column="age" property="age"/>
        <result column="content" property="content"/>
        <result column="title" property="title"/>
        <result column="money" property="money"/>
    </resultMap>
    <sql id="Base_Column_List">
		id,age,content,title,money
	</sql>
    <select id="selectOneById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_blog
        where id = #{id,jdbcType=NUMERIC}

    </select>
    <select id="selectOneById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_blog
        where id = #{id,jdbcType=NUMERIC}

    </select>
    <select id="selectById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_blog
        where id = #{id,jdbcType=NUMERIC}

    </select>
    <select id="selectAllByTitleAndContentAndCreateTimeBetweenOrderByCreateTimeDesc" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_blog
        where title = #{title,jdbcType=VARCHAR}
        AND content = #{content,jdbcType=VARCHAR}
        AND createTime between #{beginCreateTime,jdbcType=TIMESTAMP} and #{endCreateTime,jdbcType=TIMESTAMP}
        order by createTime desc

    </select>
    <select id="selectTitleAndContentByIdIn" resultMap="BaseResultMap">
        select title
        , content
        from t_blog
        where id in
        <foreach collection="idList" item="item" open="(" close=")" separator=",">
            #{item,jdbcType=NUMERIC}
        </foreach>

    </select>


</mapper>
